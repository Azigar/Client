<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.azigar.client" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name=".Resources.MyHero"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FightActivity"
            android:label="@string/Fight"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="ua.azigar.client.intent.action.FIGHT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AuthorizationActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/Registration"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="ua.azigar.client.intent.action.Authorization" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Location.LocalActivity1"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/local1"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="ua.azigar.client.intent.action.LocalActivity1" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
