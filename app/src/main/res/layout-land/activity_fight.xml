<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="0.43"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:textColor="@color/ColorTextForWindow"
                android:id="@+id/nameHero1" />

            <ua.azigar.client.Resources.Progress_hp
                android:id="@+id/hpHero1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/progress_hp"
                android:layout_gravity="center_vertical|center_horizontal|right"
                android:textColor="@color/ColorTextForWindow"
                android:layout_margin="4dp" />

            <ua.azigar.client.Resources.Progress_mana
                android:id="@+id/manaHero1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/progress_mana"
                android:textColor="@color/ColorTextForWindow"
                android:layout_gravity="center_vertical|center_horizontal|right"
                android:layout_margin="4dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtHodView"
                android:layout_gravity="center"
                android:textColor="@color/ColorTextForWindow"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ход"
                android:id="@+id/txtHod"
                android:textColor="@color/ColorTextForWindow"
                android:layout_gravity="center_horizontal|top"
                android:textSize="14sp"/>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textColor="@color/ColorTextForWindow"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:id="@+id/nameHero2" />

            <ua.azigar.client.Resources.Progress_hp
                android:id="@+id/hpHero2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/ColorTextForWindow"
                android:background="@drawable/progress_hp"
                android:layout_margin="4dp" />

            <ua.azigar.client.Resources.Progress_mana
                android:id="@+id/manaHero2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/ColorTextForWindow"
                android:background="@drawable/progress_mana"
                android:layout_margin="4dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/imgHero"
                    android:scaleType="centerInside"
                    android:layout_gravity="right|center_vertical"

                    android:focusable="true" />
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Защищать"
                    android:id="@+id/textView2"
                    android:textColor="@color/ColorTextForWindow"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:textSize="14sp" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:text="@string/HEAD"
                    android:textColor="@color/ColorWindow"
                    android:id="@+id/btnDefHead"
                    android:layout_margin="2dp"
                    android:layout_gravity="right" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:text="@string/SARS"
                    android:textColor="@color/ColorWindow"
                    android:id="@+id/btnDefBody"
                    android:layout_margin="2dp"
                    android:layout_gravity="right" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:text="@string/LEGS"
                    android:textColor="@color/ColorWindow"
                    android:id="@+id/btnDefFeet"
                    android:layout_margin="2dp"
                    android:layout_gravity="right" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="2">

            <TextView
                android:text=""
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:id="@+id/txtTimer"
                android:textSize="25sp"
                android:textColor="@color/ColorTextForWindow"
                android:textStyle="bold">
            </TextView>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pbConnect"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="visible"
                android:indeterminateDrawable="@drawable/spinner_red"
                android:indeterminateOnly="true" />

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Атаковать"
                    android:id="@+id/textView1"
                    android:textColor="@color/ColorTextForWindow"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:textSize="14sp"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:text="@string/HEAD"
                    android:layout_margin="2dp"
                    android:textColor="@color/ColorWindow"
                    android:id="@+id/btnAtkHead" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:text="@string/SARS"
                    android:layout_margin="2dp"
                    android:textColor="@color/ColorWindow"
                    android:id="@+id/btnAtkBody" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="@string/LEGS"
                    android:layout_margin="2dp"
                    android:textSize="14sp"
                    android:textColor="@color/ColorWindow"
                    android:id="@+id/btnAtkFeet" />

            </LinearLayout>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/imgEnemy"
                android:scaleType="centerInside"
                android:layout_gravity="left|center_vertical"
                android:focusable="true" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.38" >


            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/txtComentFight"
            android:textSize="16dp"
            android:textColor="@color/ColorTextForWindow"
            android:layout_gravity="center_horizontal|top" />

        <ProgressBar
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/pbConnectEnter"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="visible"
            android:indeterminateDrawable="@drawable/spinner_load"
            android:indeterminateOnly="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtComentConnect"
            android:layout_weight="0.04"
            android:textSize="16dp"
            android:layout_gravity="left|bottom|center_horizontal"
            android:textColor="@color/ColorTextForWindow"
            android:text="@string/Load" />
    </FrameLayout>

</LinearLayout>